# Copy to .env.prod before running docker-compose.prod.yml

# App identity and runtime
APP_NAME=Business Automation Portal
ENVIRONMENT=production
API_HOST=0.0.0.0
API_PORT=8000
RATE_LIMIT=200/minute

# Security
SECRET_KEY=replace-with-a-long-random-secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# Database and cache
POSTGRES_DB=automation
POSTGRES_USER=automation
POSTGRES_PASSWORD=replace-with-strong-db-password
DATABASE_URL=postgresql+psycopg2://automation:replace-with-strong-db-password@postgres:5432/automation
REDIS_URL=redis://redis:6379/0
CELERY_TASK_ALWAYS_EAGER=false

# CORS (comma-separated list)
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# AI provider
AI_BASE_URL=https://api.openai.com/v1
AI_API_KEY=replace-with-provider-key
AI_DEFAULT_MODEL=gpt-4o-mini
AI_REQUEST_TIMEOUT_SECONDS=30

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
